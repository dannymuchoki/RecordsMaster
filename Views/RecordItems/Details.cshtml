@model IEnumerable<RecordsMaster.Models.RecordItemModel>

<h2>Record Items List</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>CIS</th>
            <th>Barcode</th>
            <th>Record Type</th>
            <th>Box Number</th>
            <th>Digitized</th>
            <th>Closing Date</th>
            <th>Destroy Date</th>
            <th>Request This Reocrd</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CIS</td>
                <td>@item.BarCode</td>
                <td>@item.RecordType</td>
                <td>@item.BoxNumber</td>
                <td>@(item.Digitized ? "Yes" : "No")</td>
                <td>@item.ClosingDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.DestroyDate?.ToString("yyyy-MM-dd")</td>
                <td><a href="#" class="btn btn-primary">Request</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Search", "RecordItems")" class="btn btn-secondary">Back to Search</a>